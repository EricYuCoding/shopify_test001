{% if section.settings['show-wave'] %}
  <section>
    <div class="wave-bar">
      <div class="wave-bar-left-section"></div>
      {% if section.settings.image != blank %}
        <img
          width="40"
          height="40"
          loading="lazy"
          src="{{ section.settings.image | image_url }}"
        >
      {% else %}
        <img
          width="40"
          height="40"
          loading="lazy"
          src="{{ 'chartreuse-scallop-solid.svg' | asset_url}}"
        >
      {% endif %}
      <div class="wave-bar-right-section"></div>
    </div>
    <div class="wave-repeated">
      <div></div>
    </div>
  </section>
{% endif %}

<style>
  .wave-repeated {
    width: 100%;
    height: 21px;
    display: block;
    background-image: url('{{ 'chartreuse-scallop-solid.svg' | asset_url }}');
    background-repeat: repeat-x;
    transform: scaleY(-1);
    z-index: 3;
    position: relative;
    margin-top: -20px;
  }
</style>

{% schema %}
{
  "name": "Wave Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show-wave",
      "label": "show wave",
      "default": true
    },

    {
      "type": "image_picker",
      "id": "image",
      "label": "pick an image",
      "info": "svg recommended format"
    }
  ],
  "presets": []
}
{% endschema %}
